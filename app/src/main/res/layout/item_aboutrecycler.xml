<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.5">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tree_img_ly"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
                <TextView
                    android:id="@+id/tree_name_ly"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="나무 이름"
                    android:textColor="#369657"
                    android:fontFamily="@font/app_main_font"
                    android:textSize="25sp"
                    app:layout_constraintTop_toBottomOf="@id/tree_img_ly"
                    app:layout_constraintLeft_toLeftOf="@id/tree_img_ly"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>